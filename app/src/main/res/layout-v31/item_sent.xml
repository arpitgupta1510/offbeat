<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedMessage"
        android:layout_alignParentEnd="true"
        android:minHeight="30dp"
        android:minWidth="80dp"
        android:maxWidth="360dp"
        android:background="@drawable/sentbox"
        android:layout_marginTop="2dp"
        android:layout_gravity="end"
        android:clipToPadding="false"
        android:elevation="10dp"
        tools:ignore="RtlSymmetry">
        <TextView
            android:id="@+id/msgRepliedTo"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Reply"
            android:background="@drawable/sender_reply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="clip_horizontal|fill_horizontal"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            android:maxWidth="320dp"
            android:foregroundGravity="fill_horizontal"
            android:gravity="left"
            android:paddingStart="6dp"
            android:paddingTop="4dp"
            android:paddingEnd="6dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            tools:ignore="RtlSymmetry,SmallSp" />

        <ImageView
            android:id="@+id/ImageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reply_background"
            android:adjustViewBounds="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            android:clipToOutline="true"
            android:layout_marginTop="6dp"
            android:maxHeight="300dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/msgRepliedTo"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/msgSentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|fill_horizontal"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:maxWidth="320dp"
            android:foregroundGravity="fill_horizontal"
            android:gravity="left"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/msgSentTime"
            app:layout_constraintTop_toBottomOf="@id/ImageSent"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/msgSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sendMsg"
            tools:ignore="RtlSymmetry,SmallSp" />

        <ImageView
            android:id="@+id/sendMsg"
            android:layout_width="14dp"
            android:layout_height="13dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:src="@drawable/ic_baseline_data_usage_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
