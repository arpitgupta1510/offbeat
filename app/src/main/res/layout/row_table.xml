<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/friendClgImage"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/use"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#333333"
        app:riv_corner_radius_bottom_left="30dp"
        app:riv_corner_radius_bottom_right="30dp"
        app:riv_corner_radius_top_left="30dp"
        app:riv_corner_radius_top_right="30dp"
        app:riv_mutate_background="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/friendClgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnPrimary"
        android:maxLength="16"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/friendClgImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friendClgUid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:maxWidth="100dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/friendClgImage"
        app:layout_constraintTop_toBottomOf="@+id/friendClgName" />


    <View
        android:id="@+id/view8"
        android:layout_width="0dp"
        android:layout_height=".2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/friendClgUid"
        app:layout_constraintTop_toBottomOf="@+id/friendClgImage" />




</androidx.constraintlayout.widget.ConstraintLayout>